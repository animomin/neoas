script.  
  var mobile;
  $(document).ready(function(){
    mobile = isMobile.any();
    
    $('#page-wrapper').addClass('no-padding');
    //- mobile = true;
    /**
     * Set Layout 
     */
    var menu = parseInt(sessionStorage.getItem('menu')) || neo.menu;
    neoModules.SetLayout(menu, $('#workspace'));      
    $($('a.navbar-as[data-as="'+menu+'"]').parent()).addClass('active').siblings().removeClass('active');
    
    $(document).on('click','a.navbar-as', function(event){
      event.preventDefault();
      $(".navbar-collapse").collapse('hide');
      $($(this).parent()).addClass('active').siblings().removeClass('active');
      menu = $(this).data('as');
      sessionStorage.setItem('menu', menu);
      neoModules.SetLayout(menu, $('#workspace'));      
    });  
    
    
        
    
    $(window).bind("load resize scroll", function () {
        //- if (!$("body").hasClass('body-small')) {
            neoModules.SetElementHeight();
        //- }
        if(menu === MENU.MANAGE){
          var height = $(window).height() - 110;
          $('.tabs-container').height(height);
        }
    });
    
    Pace.on('hide', function(){
        $('#workspace').removeClass('hidden');
        //- tour.start();
    });  
  });
  
  
